<div class="container">
		<div class="row">
  			<div class="col-xs-3">
				<div class="profile">
					<h1>User info</h1>
					<div class="image"><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></div>
						<div class="user">name : <%= @book.user.name %></div>
						<div class="introduction">introduction : <%= @book.user.introduction %></div>
						<div class="profile-info"><%= link_to "設定", edit_user_path(@book.user)%></div>
				</div>
				<h3 class="new-book">New book</h3>
					<%= form_for(@book) do |f| %>
						<% if @book.errors.any? %>
  						<div class="error_message">
        				<h2>2 errors</h2>
	    				<ul>
	      					<% @book.errors.full_messages.each do |message| %>
	        				<li><%= message %></li>
	      					<% end %>
	    				</ul>
  						</div>
						<% end %>
				    <div class="field-title">Title</div>
				    	<%= f.text_field :title %>
				    <div class="area-body">Body</div>
				    	<%= f.text_area :body %>
				　　<div class="submit">
				    	<%= f.submit 'Create Book' %></div>

					<% end %>
			</div>
			<div class="col-xs-9">
				<div class="book-show">Book detail</div>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
							<tr>
									<td><%= link_to users_path(@user) do %><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%><% end %>
										<p><%= link_to @book.user.name, users_path %></p>
									</td>
									<td><%= @book.title %></td>
									<td><%= @book.body %></td>
								<% if current_user.id == @book.user_id %>
									<td><%= link_to "Edit", edit_book_path(@book.id) %></td>
									<td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
								<% end %>
			    			</tr>
					</tbody>
				</table>
			</div>
		</div>
</div>

